{% extends "base.twig" %}

{% block title %}Sign up{% endblock %}

{% block footer %}
    <script src="/js/app.js"></script>
    <script>
        $(document).ready(function() {

            /**
             * Validate the form
             */
            $('#formSignup').validate({
                rules: {
                    name: 'required',
                    email: {
                        required: true,
                        email: true,
                        remote: '/account/validate-email'
                    },
                    password: {
                        required: true,
                        minlength: 6,
                        validPassword: true
                    }
                },
                messages: {
                    email: {
                        remote: 'email already taken'
                    }
                }
            });
        });

        function myFunction() {
            let x = document.getElementById('inputPassword');

            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }

    </script>

{% endblock %}

{% block body %}

    {% if user.errors is not empty %}
        <p>Errors:</p>
        <ul>
            {% for error in user.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <div class="center">
        <form class="entry_form login" method="post" action="/signup/create" id="formSignup">
            <div id="app_name">WALLET OVERFLOW - Register</div>
            <input id="inputName" name="name" placeholder="Name" value="{{ user.name }}" autofocus required/>
            <input type="email" id="inputEmail" name="email" placeholder="email address" value="{{ user.email }}" required />
            <input type="password" id="inputPassword" name="password" placeholder="Password" required />
            <input type="checkbox" onclick="myFunction()">Show Password
            <button type="submit">Sign up</button>
        </form>
    </div>
    

{% endblock %}