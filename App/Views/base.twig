<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Wallet Overflow - {% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>
<body>
    {% for message in flash_messages %}
        <div class="alert alert-{{ message.type }}">
            {{ message.body }}
        </div>
    {% endfor %}

    {% if current_user %}
        <nav>
            <p>Welcome {{ current_user.name }}</p>
        </nav>

        <main>
            <div class="sidebar">
                <a href="/" class="button">Home</a>
                <a href="/income/show" class="button">Income</a>
                <a href="/expense/show" class="button">Expense</a>
                <a href="/balance/show" class="button">Balance</a>
                <a href="/profile/show" class="button">Profile</a>
                <a href="/logout" class="button">Logout</a>
            </div>
    {% endif %}

    {% block body %}
    {% endblock %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    {% block footer %}
    {% endblock %}
</body>
</html>
